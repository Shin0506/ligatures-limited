{
	"name": "ligatures-limited",
	"displayName": "Ligatures Limited",
	"description": "Only display ligatures in a limited context, such as operators, but not within strings.",
	"version": "1.0.0",
	"author": "Kerry Shetline",
	"engines": {
		"vscode": "^1.5.0"
	},
	"categories": [
		"Other"
	],
	"icon": "img/icon.png",
	"activationEvents": [
		"*"
	],
	"keywords": [
		"Ligatures",
		"Ligature"
	],
	"main": "./out/src/extension",
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.12.37",
		"@types/oniguruma": "^7.0.1",
		"@types/vscode": "^1.44.0",
		"mocha": "^7.1.2",
		"tslint": "^6.1.2",
		"typescript": "^3.8.3",
		"vscode": "^1.1.37",
		"vscode-oniguruma-wasm": "^1.1.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kshetline/ligatures-limited.git"
	},
	"license": "MIT",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "LigaturesLimited",
			"properties": {}
		},
		"commands": [
			{
				"command": "extension.enableScopeHover",
				"title": "enable hover information",
				"category": "ligatures-limited"
			},
			{
				"command": "extension.disableScopeHover",
				"title": "disable hover information",
				"category": "ligatures-limited"
			}
		]
	},
	"dependencies": {
		"ks-util": "^1.11.0",
		"vscode-test": "^1.3.0",
		"vscode-textmate": "^5.1.1"
	}
}