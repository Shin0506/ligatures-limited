{
	"name": "ligatures-limited",
	"displayName": "Ligatures Limited",
	"description": "Only display ligatures in a limited context, such as operators, but not within strings.",
	"version": "1.0.0-beta",
	"author": "Kerry Shetline",
	"publisher": "kshetline",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"icon": "img/icon.png",
	"activationEvents": [
		"*"
	],
	"keywords": [
		"ligature",
		"ligatures",
		"scope"
	],
	"main": "./out/src/extension",
	"repository": {
		"type": "git",
		"url": "https://github.com/kshetline/ligatures-limited.git"
	},
	"license": "MIT",
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"lint": "eslint \"**/*.ts\""
	},
	"dependencies": {
		"ks-util": "^1.11.0",
		"vscode-oniguruma-wasm": "^1.1.0",
		"vscode-test": "^1.3.0",
		"vscode-textmate": "^5.1.1"
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.4",
		"@types/oniguruma": "^7.0.1",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"eslint-config-standard": "^14.1.1",
		"eslint-plugin-chai-friendly": "^0.6.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jasmine": "^4.1.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode": "^1.1.37"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Ligatures Limited",
			"properties": {
				"ligaturesLimited.compactScopeDisplay": {
					"type": "boolean",
					"default": false,
					"description": "Display scope info when hovering over text in compact form.",
					"language-overridable": true
				},
				"ligaturesLimited.contexts": {
					"type": "string",
					"default": null,
					"markDownDescription": "List of contexts (token category or token scope) in which ligatures should be enabled.",
					"language-overridable": true
				},
				"ligaturesLimited.debug": {
					"type": "boolean",
					"default": false,
					"description": "Highlight disabled and enabled ligatures (works best in dark mode).",
					"language-overridable": true
				},
				"ligaturesLimited.languages": {
					"type": "object",
					"default": null,
					"description": "Language-specific rules",
					"properties": {
						"contexts": {
							"type": "string",
							"default": null
						},
						"debug": {
							"type": "boolean",
							"default": null
						},
						"inherit": {
							"type": "string",
							"default": null,
							"description": "For language-specific settings, a language ID to for that language to inherit from.",
							"language-overridable": true
						}
					}
				},
				"ligaturesLimited.ligaturesByContext": {},
				"ligaturesLimited.selectionMode": {
					"enum": [
						"off",
						"cursor",
						"line",
						"selection"
					],
					"enumDescriptions": [
						"Ligatures are not disabled relative to the cursor position or current selection",
						"Ligatures are disabled at the current cursor position",
						"Ligatures are disabled at the current line where the cursor is positioned",
						"Ligatures are disabled within the current selection"
					],
					"default": "cursor",
					"description": "Option to disable ligatures at the current cursor position, current line, or within the current selection.",
					"language-overridable": true
				}
			},
			"configurationDefaults": {
				"editor.fontLigatures": true,
				"editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace"
			}
		},
		"commands": [
			{
				"command": "extension.enableScopeHover",
				"title": "enable hover information",
				"category": "ligatures-limited"
			},
			{
				"command": "extension.disableScopeHover",
				"title": "disable hover information",
				"category": "ligatures-limited"
			}
		]
	}
}